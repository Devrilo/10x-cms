{
  "name": "10x-cms",
  "version": "1.0.0",
  "description": "A modern Content Management System built with performance and scalability in mind",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:legacy": "mocha \"src/**/*.test.js\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:coverage": "playwright test --coverage",
    "migrate": "npx knex migrate:latest --knexfile src/server/db/knexfile.js",
    "migrate:rollback": "npx knex migrate:rollback --knexfile src/server/db/knexfile.js",
    "migrate:status": "npx knex migrate:status --knexfile src/server/db/knexfile.js",
    "example:ddd": "node examples/ddd-usage-example.js"
  },
  "author": "10xDevs",
  "license": "ISC",
  "dependencies": {
    "@10xdevspl/http-client": "0.0.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "4.21.2",
    "knex": "3.1.0",
    "multer": "1.4.5-lts.1",
    "sqlite3": "5.1.7",
    "superagent": "10.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "22.14.1",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "bower": "1.8.14",
    "chai": "4.3.4",
    "mocha": "8.4.0",
    "nodemon": "^3.0.2",
    "ts-migrate": "^0.1.35",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
