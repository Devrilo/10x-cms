{
  "name": "10x-cms",
  "version": "1.0.0",
  "description": "A modern Content Management System built with performance and scalability in mind",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node index.ts",
    "build": "tsc && npm run copy-db",
    "copy-db": "powershell -Command \"Copy-Item 'src/server/db/dev.sqlite3' 'dist/src/server/db/' -Force -ErrorAction SilentlyContinue; Copy-Item 'src/server/db/migrations' 'dist/src/server/db/' -Recurse -Force -ErrorAction SilentlyContinue; Copy-Item 'src/server/data' 'dist/src/server/' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "watch": "tsc --watch",
    "test": "mocha \"src/**/*.test.js\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:coverage": "playwright test --coverage"
  },
  "author": "10xDevs",
  "license": "ISC",
  "dependencies": {
    "@10xdevspl/http-client": "0.0.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "4.21.2",
    "knex": "3.1.0",
    "multer": "1.4.5-lts.1",
    "sqlite3": "5.1.7",
    "superagent": "10.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.14.1",
    "bower": "1.8.14",
    "chai": "4.3.4",
    "mocha": "8.4.0",
    "nodemon": "^3.0.2",
    "ts-migrate": "^0.1.35",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
